{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    },

    "strict": true,

    "strictPropertyInitialization": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true
  }
}
